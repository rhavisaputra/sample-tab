{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        {# Tab #}

        <ul class="nav nav-tabs mt-2" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true" onclick="setSessionTab(this)">Home</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false" onclick="setSessionTab(this)">Profile</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false" onclick="setSessionTab(this)">Contact</a>
            </li>
        </ul>

        {# Tab Content #}

        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                Home
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                Profile
            </div>
            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                Contact
            </div>
        </div>

        {# Button #}
        
        <a class="btn btn-primary" href="/test" role="button">Test</a>

    </div>
    
{% endblock %}

{% block specify_stylesheets %}
<style>

</style>
{% endblock %}

{% block specify_javascripts %}
<script>

    var activeTab;

    function setSessionTab(e) {
        var id = e.id;
        console.log(id);
        sessionStorage.setItem('activeTab', id);
    }
    activeTab = sessionStorage.getItem('activeTab');
    $(`#myTab a[href="#${activeTab}"]`).tab('show');

</script>
{% endblock %}
